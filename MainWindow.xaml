<Window x:Class="FishDeskNextReborn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FishDeskNextReborn"
        mc:Ignorable="d"
        Title="FishDeskNext:Reborn" Height="180" Width="800" Visibility="Visible" Loaded="Window_Loaded">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="20">
            <TextBlock FontSize="20" HorizontalAlignment="Center">FishDeskNextReborn</TextBlock>
            <TextBlock FontSize="10" HorizontalAlignment="Center">支持开源和开放的软件!</TextBlock>
            <TextBlock FontSize="15" HorizontalAlignment="Center">开源地址:
            <Hyperlink Click="Hyperlink_Click" NavigateUri="https://github.com/liziyu0714/FishDeskNextReborn">https://github.com/liziyu0714/FishDeskNextReborn</Hyperlink>
            </TextBlock>
            <TextBlock FontSize="10" HorizontalAlignment="Center">自豪地采用GPL v3许可证</TextBlock>
            <TextBlock FontSize="10" HorizontalAlignment="Center">Hotfix 1(24.05.04)  此版本可能较不稳定</TextBlock>
            <Button x:Name="GoTOFlitterBtn" Click="GoTOFlitterBtn_Click" Width="120">打开过滤器</Button>
        </StackPanel>
    </Grid>
</Window>
